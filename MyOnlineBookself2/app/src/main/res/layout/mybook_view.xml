<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:padding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="8dp"
    android:translationZ="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/imageBookViewShop"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/DeleteBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageBookViewShop"
        android:layout_alignStart="@id/imageBookViewShop"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_button_with_black_border"
        android:text="Delete"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/titleTextBookViewShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/imageBookViewShop"
        android:layout_alignTop="@id/imageBookViewShop"
        android:layout_marginStart="16dp" />

    <View
        android:id="@+id/redLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/titleTextBookViewShop"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imageBookViewShop"
        android:background="@color/design_default_color_error" />

    <TextView
        android:id="@+id/authorBookViewShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/redLineView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageBookViewShop"
        android:text="Nom de l'auteur"
        android:textSize="14sp" />

    <Button
        android:id="@+id/whiteBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/DeleteBookButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/white_button_with_black_border"
        android:text="Read"
        android:textColor="@color/black" />

</RelativeLayout>
